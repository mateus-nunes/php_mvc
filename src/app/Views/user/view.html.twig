{% extends "Base.html.twig" %}

{% block main %}

	<h1 class="text-center">Visualização de Usuário</h1>

	<div class="row">
		<div class="col-12 col-md-6">
			<label for="name" class="form-label">Nome</label>
			<input type="text" name="name" readonly value="{{ user.name }}" class="form-control" placeholder="Informe o nome" aria-label="Nome">
		</div>
		<div class="col-12 col-md-6">
			<label for="email" class="form-label">Email</label>
			<input type="text" name="email" readonly value="{{ user.email }}" class="form-control" placeholder="Informe o email" aria-label="Email">
		</div>
	</div>

	{% if user.path_image %}
		<h4 class="text-center">Foto de perfil</h4>
		<img src="{{user.path_image}}" style="max-width:150px" class="img-thumbnail m-3 mx-auto d-block">
	{% endif %}


{% endblock %}
